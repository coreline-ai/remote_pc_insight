# Runtime
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database (Neon)
# Example:
# DATABASE_URL=postgresql://<user>:<password>@<host>/<db>?sslmode=require
DATABASE_URL=

# Security
# Use a random 32+ chars secret.
JWT_SECRET=
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAMESITE=none
AUTH_COOKIE_DOMAIN=
ENABLE_API_DOCS=false
MVP_TEST_LOGIN_ENABLED=false

# Network / Proxy
TRUST_PROXY_HEADERS=true
# JSON 배열 문자열 또는 콤마 구분 문자열 모두 지원
CORS_ORIGINS=https://<your-web-domain>
TRUSTED_HOSTS=<your-api-domain>,<your-api-project>.vercel.app

# Rate limit / Cache (optional)
REDIS_URL=
REDIS_RATE_LIMIT_PREFIX=pcinsight:rl

# AI Copilot (optional)
ENABLE_AI_COPILOT=false
AI_PROVIDER=glm45
OPENAI_API_KEY=
GLM_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GLM_MODEL=glm-4.5
